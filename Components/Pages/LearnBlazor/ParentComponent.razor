@page "/learnblazor/parentcomponent"

<h3>ParentComponent</h3>

<CascadingValue Value="@messageForGrandChildTemp">
    <CascadingValue Value="@LuckyNumber">
        <_ChildComponent OnButtonClick="ShowMessage" Title="This title is passed as as parameter from ParentComponent">
            <ChildSomeContent>
                Some text between the tags from ParentComponent
            </ChildSomeContent>
            <ChildContent>
                Text from _ChildComponent
            </ChildContent>
        </_ChildComponent>
    </CascadingValue>
</CascadingValue>

<p>@messageText</p>

@code {
    private string messageForGrandChildTemp = "This is a text form ParentComponent to GrandChildComponent";
    private int LuckyNumber = 7;
    public string messageText = "";

    private void ShowMessage()
    {
        messageText = "Button inside child component was clicked";
    }
}
